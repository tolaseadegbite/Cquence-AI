<div>
  <div class="music-player bg-main border-bs border-subtle" data-player-target="player">
    <div class="i-full b-full flex items-center justify-between">
      <!-- (Rest of the player HTML is unchanged) -->

      <!-- =========== Left Section: Now Playing =========== -->
      <div class="flex items-center gap-3" style="min-width: 180px; width: 30%;">
        <img src="https://i.scdn.co/image/ab67616d00004851c3a649666568e25c53164993" alt="Album Art" width="56" height="56" class="rounded-md" data-player-target="albumArt">
        <div class="flex flex-col">
          <a href="#" class="font-semibold text-white text-sm hover:underline whitespace-nowrap overflow-ellipsis overflow-hidden" data-player-target="songTitle">Song Title</a>
          <a href="#" class="text-xs text-neutral-400 hover:underline whitespace-nowrap overflow-ellipsis overflow-hidden" data-player-target="songArtist">Artist Name</a>
        </div>
      </div>

      <!-- =========== Center Section: Player Controls =========== -->
      <div class="flex flex-col items-center justify-center gap-2" style="width: 40%; max-width: 722px;">
        <div class="flex items-center gap-4">
          <button type="button" class="player-button" title="Rewind 10s" data-action="click->player#rewind">
            <span class="icon icon--rotate-ccw text-primary"></span>
          </button>
          <button type="button" class="player-button" title="Play" data-action="click->player#togglePlay" data-player-target="toggleButton">
            <span class="icon icon--play text-primary" style="--icon-size: 2rem" data-player-target="toggleIcon"></span>
          </button>
          <button type="button" class="player-button" title="Forward 10s" data-action="click->player#fastForward">
            <span class="icon icon--rotate-cw text-primary"></span>
          </button>
        </div>
        <div class="flex items-center gap-2 i-full">
          <span class="text-xs text-neutral-400" style="min-width: 40px; text-align: right;" data-player-target="currentTime">0:00</span>
          <div class="progress-bar-container grow" data-action="click->player#seek">
            <div class="progress-bar">
              <div class="progress-bar-fill" style="width: 0%;" data-player-target="progress">
                <div class="progress-bar-handle"></div>
              </div>
            </div>
          </div>
          <span class="text-xs text-neutral-400" style="min-width: 40px;" data-player-target="duration">0:00</span>
        </div>
      </div>

      <!-- =========== Right Section: Extra Controls =========== -->
      <div class="flex items-center justify-end gap-3" style="min-width: 180px; width: 30%;">
        <div class="flex items-center gap-2" style="width: 125px;">
          <button type="button" class="player-button" title="Mute" data-action="click->player#toggleMute">
            <span class="icon icon--volume-2 text-primary" data-player-target="volumeIcon"></span>
          </button>
          <div class="progress-bar-container grow" data-action="click->player#setVolume" data-player-target="volumeBarContainer">
            <div class="progress-bar">
              <div class="progress-bar-fill" style="width: 75%;" data-player-target="volumeBar">
                <div class="progress-bar-handle"></div>
              </div>
            </div>
          </div>
        </div>
        <button type="button" class="player-button" title="Collapse Player" data-action="click->player#collapse">
          <span class="icon icon--chevron-down text-primary"></span>
        </button>
        <button type="button" class="player-button" title="Close Player" data-action="click->player#stop">
          <span class="icon icon--x text-primary"></span>
        </button>
      </div>

    </div>
  </div>

  <button type="button" class="is-hidden fixed bottom-5 right-5 z-50 player-button !bg-surface-raised !p-3 rounded-full shadow-lg" title="Expand Player" data-player-target="collapsedPlayerButton" data-action="click->player#expand">
    <span class="icon icon--music text-primary" style="--icon-size: 1.5rem"></span>
  </button>
</div>