<div class="p-4 i-full bg-main p-5 border-1 border-subtle rounded-lg" style="max-inline-size: 25rem;">
  <div class="text-center">
    <div class="">
      <%= link_to root_path, class: "block" do %>
        <span class="icon icon--boom-box p-8" aria-hidden="true"></span>
      <% end %>
    </div>
    <div class="mbs-2 mbe-2">
      <h1 class="font-semibold text-3xl">CQuence AI</h1>
      <p class="font-normal text-xl mbe-5 text-subtle">Sign in</p>
    </div>
  </div>

  <%= form_with(url: sign_in_path) do |form| %>
    <div class="mbe-5">
      <%= form.label :email, style: "display: block", class: "font-semibold mbe-2" %>
      <%= form.email_field :email, value: params[:email_hint], placeholder: "Enter your email", required: true, autofocus: true, autocomplete: "email", class: "input" %>
    </div>

    <div class="mbe-5">
      <%= form.label :password, style: "display: block", class: "font-semibold mbe-2" %>
      <%= form.password_field :password, placeholder: "Enter your password", required: true, autocomplete: "current-password", class: "input" %>
    </div>

    <div>
      <%= form.submit "Sign in", class: "btn btn--primary i-full" %>
    </div>
  <% end %>

  <br>

  <div class="text-sm text-center">
    <%= link_to "Sign in without password", new_sessions_passwordless_path %>
  </div>

  <div class="text-sm text-center">
    <%= button_to "Sign in with OmniAuth", "/auth/developer", "data-turbo" => false %>
  </div>

  <br>

  <div class="text-sm text-center">
    <%= link_to "Sign up", sign_up_path %> |
    <%= link_to "Forgot your password?", new_identity_password_reset_path %>
  </div>
</div>